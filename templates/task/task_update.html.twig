{% extends "base.html.twig" %}

{% block body %}
    <br><br><br><br><br>

    <h3>Editar Tarea</h3>
    {{ form_start(newTaskForm, {'attr': {'novalidate': 'novalidate'}})}}
        {{ form_row(newTaskForm.name) }}
        {{ form_row(newTaskForm.details) }}        
        {{ form_row(newTaskForm.fechaCreacion, {'value':  createdAt  }) }}
