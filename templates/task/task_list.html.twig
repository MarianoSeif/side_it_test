{% extends "base.html.twig" %}

{% block title %} Task list {% endblock %}

{% block body %}
    <h1>List task</h1>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Details</th>
                <th>Category</th>
                <th>Client</th>
                <th>Create date</th>
                <th>Done date</th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
                 <tr>
                    <td>{{task.name}}</td>                    
                    <td>{{task.details}}</td>                    
                    <td>{{task.category}}</td>                    
                    <td>{{task.client}}</td>                    
                    {# <td>{{task.create_date}}</td>                    
                    <td>{{task.done_date}}</td>  #}                   
                </tr>
            {% endfor %}}
        </tbody>
    </table>
    
            
{% endblock %}